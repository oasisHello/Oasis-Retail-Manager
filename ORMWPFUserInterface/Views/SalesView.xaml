<UserControl x:Class="ORMWPFUI.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ORMWPFUI.Views"
             mc:Ignorable="d" Background="White" FontSize="20"
             d:DesignHeight="425" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <!--Header-->
        <TextBlock Text="Sales" FontSize="45" Margin="0 0 0 20"/>
        <!--Column 0-->
        <TextBlock Text="Items" Grid.Row="1" Grid.Column="0" Margin="0,0,0,10"/>
        <ListBox x:Name="Products" Grid.Row="2" Grid.Column="0"
                 MinHeight="200" MinWidth="150" Margin="0,0,0,20" SelectedItem="{Binding SelectedProducts}">
            <ListBox.ItemTemplate>
                
            <DataTemplate>
                <TextBlock Text="{Binding DisplayText}">
                </TextBlock>
            </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--Column 1-->
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2" Margin="20,0,20,2">
            <TextBlock  Text="Quantity"/>
            <TextBox x:Name="ItemQuantity" MinWidth="100" Margin=" 0 0 0 10"/>
            <Button x:Name="AddToCart" Content="Add to cart" Margin=" 0 0 0 10" Padding="5"/>
            <Button x:Name="RemoveFromCart" Content="Remove from cart" Padding="5"/>
        </StackPanel>

        <!--Column 2-->
        <TextBlock Text="Cart" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,0,0,0"/>
        <ListBox x:Name="Cart" Grid.Row="2" Grid.Column="2"
                 MinHeight="200" MinWidth="150" Grid.ColumnSpan="2" Margin="0,0,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}"/>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <DockPanel Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,0,0,0">
            <TextBlock  Text="SubTotal: " Margin=" 0 0 15 0"/>
            <TextBlock x:Name="SubTotal" Text="$0.00" TextAlignment="Right"/>
        </DockPanel>
        <DockPanel Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,0,0,20" Grid.RowSpan="2">
            <TextBlock  Text="Tax: "/>
            <TextBlock x:Name="Tax" Text="$0.00" TextAlignment="Right"/>
        </DockPanel>
        <DockPanel  Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,0,0,20" Grid.RowSpan="2">
            <TextBlock  Text="Total: "/>
            <TextBlock x:Name="Total" Text="$0.00" TextAlignment="Right"/>
        </DockPanel>
        <Button x:Name="CheckOut" Grid.Row="6" Grid.Column="2" Content="Check Out"
                Margin="0,10,0,0" Padding="5" Grid.ColumnSpan="2" />

    </Grid>
</UserControl>
